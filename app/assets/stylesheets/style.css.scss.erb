/* ==========================================================================
   HEADER SECTION
   ========================================================================== */

#header-section {
  background: url(<%= asset_path 'welcome.jpg' %>) no-repeat center top;
	margin-top: -20px;
	padding-top:60px;
	text-align:center;
	background-position: center center;
	min-height: 250px;
	width: 100%;	
    -webkit-background-size: 100%;
    -moz-background-size: 100%;
    -o-background-size: 100%;
    background-size: 100%;
    -webkit-background-size: cover;
    -moz-background-size: cover;
