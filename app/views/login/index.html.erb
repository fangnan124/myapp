<!--CONTACT SECTION -->
<div id="contact-section">
  <div class="container">
    <div class="row main-top-margin text-center">
      <div class="col-md-8 col-md-offset-2 "><h1>ログイン</h1></div>
    </div>
    <!-- ./ Main Heading-->
    <div class="row main-low-margin">
      <div class="col-md-12  col-sm-12 ">
        <div class="col-md-6  ">
          <h3>ユーザIDとパスワードを入力してください</h3>
          <%= form_for(@user, url:{action: :login}) do |f| %>
              <div class="row">
                <div class="col-md-6 ">
                  <div class="form-group">
                    <%= f.text_field :username, class: "form-control", required: "required", placeholder: "ユーザID" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 ">
                  <div class="form-group">
                    <%= f.password_field :password, class: "form-control", required: "required", placeholder: "パスワード" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 ">
                  <div class="form-group">
                    <%= f.submit 'ログイン', class: "btn btn-primary" %>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!--END CONTACT SECTION -->
