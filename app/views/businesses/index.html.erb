<div class="container">
  <h1>Listing businesses</h1>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Field</th>
      <th>Programming language</th>
      <th>Business</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @businesses.each do |business| %>
        <tr>
          <td><%= business.field %></td>
          <td><%= business.programming_language %></td>
          <td><%= business.business %></td>
          <td><%= link_to 'Show', business %></td>
          <td><%= link_to 'Edit', edit_business_path(business) %></td>
          <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Business', new_business_path %>

</div>

