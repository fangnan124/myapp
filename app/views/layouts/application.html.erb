<!DOCTYPE html>
<html>
<head>
  <title>Marvelous Tech</title>

  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>

  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans", media: "all" %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Belgrano|Courgette&subset=latin,latin-ext", media: "all" %>

  <%= yield :head %>
</head>

<body class="container">
<div class="loader"></div>
<!-- NAV SECTION -->
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/<%= I18n.locale %>">Marvelous Tech</a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t('menu.home'), welcome_path %></li>
        <li><%= link_to t('menu.news'), show_newses_path %></li>
        <li><%= link_to t('menu.business'), show_businesses_path %></li>
        <li><%= link_to t('menu.recruits'), show_recruits_path %></li>
        <li><%= link_to t('menu.projects'), show_projects_path %></li>
        <li><%= link_to t('menu.contact'), new_contact_path %></li>
        <li><%= link_to_unless current_user.nil?, t('menu.management'), {controller: :management, action: :index} do end %></li>
        <li><%= link_to_if current_user.nil?, t('menu.login'), new_user_session_path do |name| link_to t('menu.mypage'), {controller: :login, action: :my_page} end %></li>
        <li>
          <div style="padding: 15px">
            <%= select :page, :language, [[t('language.japanese'), "ja"], [t('language.english'), "en"]], {selected: I18n.locale}, onchange:'location.href="/"+value;' %>
          </div>
        </li>
        }
      </ul>

    </div>

  </div>
</div>
<!--END NAV SECTION -->

<%= yield %>

<!--FOOTER SECTION -->
<div id="footer">
  <!--<div class="container">-->
    <div class="row ">
      &copy; 2016 www.marveloustech.com | All Right Reserved
    </div>
  <!--</div>-->
</div>
<!--END FOOTER SECTION -->

</body>
</html>
