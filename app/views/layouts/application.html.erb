<!DOCTYPE html>
<html>
<head>
  <title>benegrouper</title>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <%= javascript_include_tag "bootstrap.min", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "bootshape", "data-turbolinks-track" => true %>

  <%= javascript_include_tag "https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js", "data-turbolinks-track" => true %>

  <%= stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Open+Sans", media: "all", "data-turbolinks-track" => true %>

  <%= stylesheet_link_tag    "bootstrap", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "font-awesome.min", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "style", "data-turbolinks-track" => true %>

  <%= stylesheet_link_tag    "bootshape", media: "all", "data-turbolinks-track" => true %>

  <%= javascript_include_tag "http://maps.googleapis.com/maps/api/js?key=AIzaSyDY0kkJiTPVd2U7aTOAwhc9ySH6oHxOIYM&sensor=false", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Belgrano|Courgette&subset=latin,latin-ext", media: "all", "data-turbolinks-track" => true %>

  <style type="text/css">
    <!--
    .STYLE1 {
      color: #99CC00;
      font-weight: bold;
    }
    .STYLE2 {font-size: 16px}
    -->
  </style>

  <script>
        var myCenter=new google.maps.LatLng(35.698231, 139.827589);

        function initialize()
        {
          var mapProp = {
            center:myCenter,
            zoom:17,
            mapTypeId:google.maps.MapTypeId.ROADMAP
          };

          var map=new google.maps.Map(document.getElementById("googleMap"),mapProp);

          var marker=new google.maps.Marker({
            position:myCenter,
          });

          marker.setMap(map);
        }

        google.maps.event.addDomListener(window, 'load', initialize);
  </script>

  <%= yield :head %>
</head>

<body>
<div class="loader"></div>
<!-- NAV SECTION -->
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Bene-grouper</a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'ホーム', {controller: :welcome, action: :index} %></li>
        <li><%= link_to 'ニュース', {controller: :newsinfos, action: :show_newsinfos} %></li>
        <li><%= link_to '事業内容', {controller: :business_descriptions, action: :show_business_descriptions} %></li>
        <li><%= link_to '採用情報', {controller: :recruits, action: :show_recruits} %></li>
        <li><%= link_to '事業実績', {controller: :business_results, action: :show_business_results} %></li>
        <li><%= link_to 'お問合せ', {controller: :contacts, action: :new} %></li>
        <li><%= link_to_if session[:role] == "m", '管理', {controller: :management, action: :index} do end %></li>
        <li><%= link_to_if session[:status].nil?, 'ログイン', {controller: :login, action: :index} do |name| link_to 'マイページ', {controller: :login, action: :my_page} end %></li>
      </ul>
    </div>

  </div>
</div>
<!--END NAV SECTION -->

<%= yield %>

<!--FOOTER SECTION -->
<div id="footer">
  <div class="container">
    <div class="row ">
      &copy; 2016 www.benegrouper.co.jp | All Right Reserved
    </div>
  </div>
</div>
<!--END FOOTER SECTION -->

</body>
</html>
